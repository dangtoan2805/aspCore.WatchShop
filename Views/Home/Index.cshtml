@model ProductVM
@{
    ViewData["Title"] = "Home Page";
}
@section Css{
    <link href="~/css/home.css" rel="stylesheet" />
    <link href="~/css/product.css" rel="stylesheet" />
}
<div id="vt-main">
    <!--Slider-->
    <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselIndicators" data-slide-to="1"></li>
            <li data-target="#carouselIndicators" data-slide-to="2"></li>
        </ol>
        <div class="vt-outer vt-slider">
            <div class="vt-inner">
                <div class="vt-corp">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/slider//slider_1.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/slider//slider_2.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/slider//slider_3.jpg" alt="Third slide">
                        </div>
                    </div>
                </div>
            </div>
        </div>    
        <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!--Main-->
    <div class="container pt-2">
        <div class="pt-md-3 pt-2 text-center">
            <h4 class="vt-title">Sản phẩm khuyến mãi</h4>
            <div class="row">
                @foreach (var p in ViewBag.PromotionWatch)
                {
                <div class="col-lg-3 col-6">
                    <div class="vt-product">
                        <a href="/Product/ProductDetail?id=@p.ID">
                            <div class="vt-product-img">
                                <img src="~/product/img_watch_1.jpg" alt="Card image cap">
                                <img class="" src="~/images/sale.png" />
                            </div>
                            <div class="vt-product-content">
                                <h5 class="vt-product-name">Đồng Hồ DW SP023</h5>
                                <div class="vt-price">
                                    <p>899.999 VND</p>
                                    <del class="">1.099.999 VND</del>
                                    @* <del class="@p.showSale">@p.PricePromotion</del> *@
                                </div>
                            </div>
                        </a>  
                    </div>
                </div>
                }
            </div>
            <a href="/Product/Products" class="vt-more">More product</a>
        </div>
        <hr class="vt-line"  />
        <div class="pt-md-3 pt-2 text-center">
            <h4 class="vt-title">Đồng hồ Nam</h4>
            <div class="row">
                @foreach (var p in ViewBag.MenWatch)
                {
                <div class="col-lg-3 col-6">
                    <div class="vt-product">
                        <a href="/Product/ProductDetail?id=@p.ID">
                            <div class="vt-product-img">
                                <img src="~/product/img_watch_1.jpg" alt="Card image cap">
                                <img class="" src="~/images/sale.png" />
                            </div>
                            <div class="vt-product-content">
                                <h5 class="vt-product-name">"A"</h5>
                                <div class="vt-price">
                                    <p>899.999 VND</p>
                                    <del class="">1.099.999 VND</del>
                                    @* <del class="@p.showSale">@p.PricePromotion</del> *@
                                </div>
                            </div>
                        </a>
                        
                    </div>
                </div>
                }
            </div>
            <a href="/Product/MenProducts" class="vt-more">More product</a>
        </div>
        <hr class="vt-line" />
        <div class="pt-md-3 pt-2 text-center">
            <h4 class="vt-title">Đồng hồ Nữ</h4>
            <div class="row">
                @foreach (var p in ViewBag.WomenWatch)
                {
                    <div class="col-lg-3 col-6">
                    <div class="vt-product">
                        <a href="/Product/ProductDetail?id=@p.ID">
                            <div class="vt-product-img">
                                <img src="~/product/img_watch_1.jpg" alt="Card image cap">
                                <img class="" src="~/images/sale.png" />
                            </div>
                            <div class="vt-product-content">
                                <h5 class="vt-product-name">"A"</h5>
                                <div class="vt-price">
                                <p>899.999 VND</p>
                                    <del class="">1.099.999 VND</del>
                                    @* <del class="@p.showSale">@p.PricePromotion</del> *@
                                </div>
                            </div>
                        </a>
                        
                    </div>
                </div>
                }
            </div>
            <a href="/Product/WomenProducts" class="vt-more">More product</a>
        </div>
        <hr class="vt-line" />
    </div>
    <!--Category-->
    <div class="container pt-2 text-center">
        <h4 class="vt-title">Danh mục sản phẩm</h4>
        <div class="row">
            <div class="col pr-0">
                <div class="vt-banner">
                    <a class="vt-banner-text" href="#">Đồng hồ nam</a>
                    <div class="vt-outer">
                        <div class="vt-inner">
                            <div class="vt-img vt-corp">
                                <img src="~/slider/banner_men.jpg" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col pl-0">
                <div class="vt-banner">
                    <a class="vt-banner-text" href="#">Đồng hồ nữ</a>
                    <div class="vt-outer">
                        <div class="vt-inner">
                            <div class="vt-img vt-corp">
                                <img src="~/slider/banner_women.jpg" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="vt-banner">
                    <a class="vt-banner-text" href="#">Phụ kiện</a>
                    <div class="vt-outer vt-slider">
                        <div class="vt-inner">
                            <div class="vt-img vt-corp">
                                <img src="~/slider/banner_cuff.jpg" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
