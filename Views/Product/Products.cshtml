@model IEnumerable<aspCore.WatchShop.Models.ProductVM>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Css{
    <link href="~/css/product.css" rel="stylesheet" />
}

<div class="container-fluid bg-dark text-center">
    <h3 class="m-0 py-2 text-white">Đồng hồ Nam</h3>
</div>
<div id="products">
    <!--***** Breadcrumb *****-->
    <nav  class="container">
        <ol class="vt-breadcrumb">
            <li class="breadcrumb-item"><a href="">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Library</li>
            <li class="ml-auto"><span id="countItem">0</span> sản phẩm</li>
        </ol>
    </nav>
    <!--*****Filter*****-->
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="text-left vt-sort">
                    <div class="dropdown">
                        <button class="btn border-0 dropdown-toggle text-left" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span id="vt-selectFilter">Loại dây</span>
                        </button>
                        <div id="select-wire"  class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" data-wire="0">Tất cả</a>
                            <a class="dropdown-item" data-wire="1">Dây Da</a>
                            <a class="dropdown-item" data-wire="2">Dây Vải</a>
                            <a class="dropdown-item" data-wire="3">Dây Kim Loại</a>
                            <a class="dropdown-item" data-wire="4">Dây Nhựa</a>
                            <a class="dropdown-item" data-wire="5">Dây Cao Su</a>
                            <a class="dropdown-item" data-wire="6">Dây Ceramic</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="text-right vt-sort">
                    <div class="dropdown ">
                        <button class="btn border-0 dropdown-toggle text-right " type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span id="vt-orderFilter">Sắp xếp</span>
                        </button>
                        <div id="select-order" class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" data-order="0" >Giá cao</</a>
                            <a class="dropdown-item" data-order="1">Giá thấp</a>
                            <a class="dropdown-item" data-order="2">Lượt mua nhiều</a>
                            <a class="dropdown-item" data-order="3">Giảm giá</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>  
    </div>
    <!--*****List Product*****-->
    <div class="container  pt-2">
        <div class="pt-md-3 pt-2 text-center">
            <div id="vt-displayProducts" class="row">       
            </div>
            <div id="vt-empty" class="vt-null">
                <img src="~/product/img_null.jpg" width="200" />
                <p class="text-dark pt-4">Sản phẩm không tồn tại</p>
            </div>
        </div>
    </div>
    <!--*****Paging*****-->
    <div class="container" >
        <ul id="vt-displayPages" data-pages="@ViewBag.Pages" class="pagination pagination-sm justify-content-center">
        </ul>
    </div>
</div>


